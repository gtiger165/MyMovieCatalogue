<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hirarki.mymoviecatalogue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SettingsActivity"/>
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.FavShowsActivity" />
        <activity android:name=".activity.FavMovieActivity" />
        <activity
            android:name=".activity.DetailActivity"
            android:theme="@style/DetailTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver
            android:name=".notification.DailyNotification"
            android:enabled="true"
            android:exported="true" />
        <receiver android:name=".widget.FavoriteBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_banner_widget_info" />
        </receiver>
        <receiver
            android:name=".notification.ReleaseNotification"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".notification.ReleaseNotifService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:authorities="com.hirarki.mymoviecatalogue.provider"
            android:name=".provider.FavMovieProvider"
            android:exported="true"
            android:readPermission="com.hirarki.mymoviecatalogue.READ_DATABASE"
            android:writePermission="com.hirarki.mymoviecatalogue.WRITE_DATABASE"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.hirarki.mymoviecatalogue.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.hirarki.mymoviecatalogue.WRITE_DATABASE" android:protectionLevel="normal"/>

</manifest>